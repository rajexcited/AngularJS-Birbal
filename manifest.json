{
  "name": "AngularJS Birbal",
  "version": "0.0.5",
  "description": "Angular performance inspection by Birbal eyes. Detailed digest cycles, watch, effect of events, effects of http",
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "match_about_blank": false,
      "js": [
        "src/message.js",
        "src/content-script/content-script.js"
      ],
      "run_at": "document_start"
    }
  ],
  "permissions": [
    "storage"
  ],
  "icons": {
    "16": "img/angular-icon.png",
    "48": "img/angular-icon.png",
    "128": "img/angular-icon.png"
  },
  "background": {
    "scripts": [
      "src/message.js",
      "src/background/background.js"
    ],
    "persistent": false
  },
  "page_action": {
    "default_title": "AngularJS Birbal",
    "default_icon": "img/angular-icon.png"
  },
  "devtools_page": "src/devtools/devToolsPage.html",
  "content_security_policy": "default-src 'self'  chrome-extension-resource: ;   style-src 'self' 'unsafe-inline'; script-src 'self' 'unsafe-eval';  connect-src *; frame-src *;",
  "web_accessible_resources": [
    "src/content-script/inject/angularinspector.js"
  ],
  "manifest_version": 2
}
